<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create a new quiz"
        android:id="@+id/creatNewQuizBtn"
        android:height="90dp"
        android:width="150dp"
        android:textSize="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="91dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or"
        android:id="@+id/or"
        android:textSize="50dp"
        android:layout_below="@+id/creatNewQuizBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View unpublished quizzes"
        android:id="@+id/ViewUnpublishedQuizzesBtn"
        android:height="150dp"
        android:width="150dp"
        android:textSize="22dp"
        android:layout_alignTop="@+id/ViewPublishedQuizzesBtn"
        android:layout_toEndOf="@+id/or"
        android:layout_toRightOf="@+id/or" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View published quizzes"
        android:id="@+id/ViewPublishedQuizzesBtn"
        android:height="150dp"
        android:width="150dp"
        android:textSize="22dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/or"
        android:layout_toLeftOf="@+id/or"
        android:layout_toStartOf="@+id/or" />

</RelativeLayout>
