<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="create a new quiz"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_gravity="left"
        android:layout_weight="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/textView5"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/GoropTV"
        android:layout_alignStart="@+id/GoropTV" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/QuizNameEdit"
        android:layout_alignBottom="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/Sumbitnewquiz"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Duration:"
        android:id="@+id/DurationTv"
        android:layout_alignBottom="@+id/txtTestDuration"
        android:layout_toLeftOf="@+id/GroupListBox"
        android:layout_toStartOf="@+id/GroupListBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Group:"
        android:id="@+id/GoropTV"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/DurationTv"
        android:layout_alignStart="@+id/DurationTv"
        android:layout_marginTop="36dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GroupListBox"
        android:layout_gravity="center_horizontal"
        android:entries="@array/RightAnswer"
        android:layout_alignTop="@+id/GoropTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/QuizNameEdit"
        android:layout_alignStart="@+id/QuizNameEdit"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtTestDuration"
        android:layout_below="@+id/GroupListBox"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />


</RelativeLayout>
